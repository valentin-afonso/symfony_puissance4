<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    {% if is_granted('ROLE_USER') %}
                        <li>
                            <a href="{{ path('app_home') }}">Home</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li>
                            <a href="{{ path('app_admin') }}">Admin</a>
                        </li>
                        {% endif %}
                        <li>
                            <a href="{{ path('app_logout') }}">logout</a>
                        </li>
                        {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                            <li>
                                <a href="{{ path('app_admin', {'_switch_user':'_exit'}) }}">Stop switch user</a>
                            </li>
                        {% endif %}
                    {% else %}
                        <li>
                            <a href="{{ path('app_login') }}">login</a>
                        </li>
                        <li>
                            <a href="{{ path('app_register') }}">register</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
            <div class="langage">
                <form action="{{ path('app_change_language') }}" method="post">
                    <button type="submit" name="locale" value="fr_FR">Français</button>
                    <button type="submit" name="locale" value="en_US">English</button>
                </form>
            </div>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
